{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "url": "https://notecard-online.ddev.site/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "https://notecard-online.ddev.site/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Preview-Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "https://notecard-online.ddev.site/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox",
            "url": "https://notecard-online.ddev.site/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "https://notecard-online.ddev.site",
                    "path": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}